<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\CategoryBundle\Entity\KeyWord" table="ca_key_words"
            repository-class="Sulu\Bundle\CategoryBundle\Entity\KeyWordRepository">
        <indexes>
            <index columns="key_word"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="key_word,locale" name="unique_idx"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="locale" column="locale" type="string" length="5" nullable="false"/>
        <field name="keyWord" column="key_word" type="string" length="255" nullable="false"/>

        <many-to-many target-entity="Sulu\Bundle\CategoryBundle\Entity\Category" field="categories"
                      inversed-by="keyWords">
            <join-table name="ca_categories_key_words">
                <join-columns>
                    <join-column name="key_word_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="category_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>

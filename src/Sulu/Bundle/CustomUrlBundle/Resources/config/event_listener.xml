<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sulu_custom_urls.serializer.event_subscriber"
                 class="Sulu\Bundle\CustomUrlBundle\EventListener\CustomUrlSerializeEventSubscriber">
            <argument type="service" id="sulu_custom_urls.domain_generator"/>

            <tag name="jms_serializer.event_subscriber" />
            <tag name="sulu.context" context="admin"/>
        </service>

        <service id="sulu_custom_urls.update_localization.request_listener"
                 class="Sulu\Bundle\CustomUrlBundle\EventListener\UpdateLocalizationListener">
            <argument type="service" id="sulu_core.webspace.request_analyzer"/>

            <tag name="sulu.context" context="website"/>
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="31"/>
        </service>
    </services>
</container>
